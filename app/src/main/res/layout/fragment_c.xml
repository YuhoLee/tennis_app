<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="주간 훈련 통계"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/week_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:text="0000-00-00 ~ 0000-00-00"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"

            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/year_up"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/button_round3"
                android:text="▲"
                android:textSize="10dp"
                android:textColor="#717171"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/year_down"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/button_round3"
                android:text="▼"
                android:textSize="10dp"
                android:textColor="#717171"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/year_edit"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:text="0000"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/year_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" 년"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/month_up"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/button_round3"
                android:text="▲"
                android:textColor="#717171"
                android:textSize="10dp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/month_down"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/button_round3"
                android:text="▼"
                android:textSize="10dp"
                android:textColor="#717171"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/month_edit"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:text="00"
            android:textSize="20dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/month_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=" 월"
            android:textSize="20dp"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_search_24"
            android:visibility="invisible"/>

    </LinearLayout>

    <View
        android:background="#717171"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_marginTop="190dp"/>

    <View
        android:background="#717171"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_marginTop="560dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/fragment_bluetooth_chat_barchart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/week_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:text="주간 통계" />

        <Button
            android:id="@+id/month_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:text="월별 통계" />

    </LinearLayout>


</FrameLayout>